@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudToggleIconButton @bind-Toggled="@_isOpen"
            Icon="@Icons.Material.Filled.Menu" 
            Color="@Color.Inherit" 
            Title="Abrir Menu"
            ToggledIcon="@Icons.Material.Filled.Close" 
            ToggledColor="@Color.Inherit" 
            ToggledTitle="Fechar Menu"
            Edge="Edge.Start" />
        <MudSpacer />
            <MudToggleIconButton @bind-Toggled="@_isDarkMode"
            Icon="@Icons.Material.Filled.DarkMode" 
            Color="@Color.Inherit" 
            Title="Tela Escuro"
            ToggledIcon="@Icons.Material.Filled.LightMode" 
            ToggledColor="@Color.Inherit" 
            ToggledTitle="Tela Clara" />
    </MudAppBar>
    <MudDrawer @bind-Open="_isOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">CavZodiaco</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _isOpen = true;
    bool _isDarkMode = true;

    MudTheme _theme = new();
    private MudThemeProvider _mudThemeProvider;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isOpen = true;
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }
}